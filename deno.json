{
  "$schema": "https://jsr.io/schema/config-file.v1.json",
  "name": "@tijs/atproto-oauth",
  "version": "0.1.0",
  "license": "MIT",
  "exports": "./mod.ts",
  "publish": {
    "include": ["mod.ts", "src/**/*.ts", "README.md", "LICENSE"],
    "exclude": ["**/*.test.ts"]
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1.0.16",
    "@tijs/oauth-client-deno": "jsr:@tijs/oauth-client-deno@4.0.2",
    "@tijs/atproto-sessions": "jsr:@tijs/atproto-sessions@0.1.1",
    "@tijs/atproto-storage": "jsr:@tijs/atproto-storage@0.1.1",
    "@atproto/syntax": "npm:@atproto/syntax@0.3.0"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true
  },
  "tasks": {
    "test": "deno test --allow-all src/",
    "check": "deno check mod.ts",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "quality": "deno fmt && deno lint && deno check mod.ts",
    "ci": "deno task quality && deno task test"
  }
}
